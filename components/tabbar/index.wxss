.tabbar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.tabbar-item {
  padding: 10rpx 30rpx;
  background: #333;
  color: #fff;
  margin-right: 15rpx;
  box-sizing: border-box;
}
.tabbar-item.active {
  background: #fff;
  color: #333;
  border: 1rpx solid #333;
}

.tabbar-content {
  width: 100%;
  padding-top: 30rpx;
}